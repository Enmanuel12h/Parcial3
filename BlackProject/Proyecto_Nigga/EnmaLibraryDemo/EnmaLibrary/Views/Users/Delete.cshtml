@model EnmaLibrary.Models.UsersModel

@{
    ViewData["Title"] = "Eliminar";
}

<h3>¿Está seguro de que desea eliminar esto?</h3>
<div>
    <h4>Eliminando un usuario</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nombre
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Correo Electrónico
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            Contraseña
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Password)
        </dd>
        <dt class="col-sm-2">
            Fecha de Registro
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RegistrationDate)
        </dd>
    </dl>

    <form asp-action="Delete">
        <div class="form-group">
            <input type="submit" value="Eliminar" class="btn btn-danger" />
            |
            <a asp-action="Index" class="btn btn-info ml-2">Volver a la Lista</a>
        </div>
    </form>
</div>
